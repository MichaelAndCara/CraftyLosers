@model IEnumerable<CraftyLosers.ViewModels.ProfileAchievement>

@{
    ViewBag.Title = "Achievements";
}
@Html.Partial("_RpgNav")
<h2>Achievements</h2>

<div>
@foreach (var item in Model)
{
    <div style="width:100px; height:150px; float:left; margin:15px 20px 15px 20px; padding:5px; 
        -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; 
        background-color: @if(item.Unlocked){<text>#D1EED1</text>}else{<text>#FDDFDE</text>};">
        <div style="height:65px; text-align:center; font-weight:bold;">@item.Achievement.Title</div>
        <div style="height:70px; text-align:center;">@item.Achievement.Description</div>
        <div style="height:15px; text-align:right; vertical-align:bottom; font-size:10px;">@item.MyQty / @item.Achievement.Qty</div>
    </div>
}
</div>
<div style="clear:both;"></div>

