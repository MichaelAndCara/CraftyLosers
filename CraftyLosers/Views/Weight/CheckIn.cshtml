@model CraftyLosers.ViewModels.CheckIn
@section style
{
    #CheckInDate
    {
        cursor: default;
    }
}
@{
    ViewBag.Title = "CheckIn";
}

<h2>CheckIn</h2>

@using (Html.BeginForm("CheckIn", "Weight", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    
    @Html.LabelFor(model => model.CheckInDate)
    @Html.TextBoxFor(model => model.CheckInDate)
    @Html.ValidationMessageFor(model => model.CheckInDate)
    
    @Html.LabelFor(model => model.Weight)
    @Html.EditorFor(model => model.Weight)
    @Html.ValidationMessageFor(model => model.Weight)
    
    <div class="form-actions">
        <input type="submit" value="Create" class="btn btn-primary" /> 
        @Html.ActionLink("Cancel", "WeightCheckIns", null, new { @class="btn" })
    </div>
}
@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#CheckInDate").datepicker(
            {
                minDate: new Date("2/17/2014"),
                maxDate: new Date("5/09/2014")                
            });

            $("#CheckInDate").attr('readonly', true);

            $("#CheckInDate").datepicker('setDate', new Date());
        });
	</script>
}
