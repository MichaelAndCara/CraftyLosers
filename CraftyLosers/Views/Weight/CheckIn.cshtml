@model CraftyLosers.ViewModels.CheckIn

@{
    ViewBag.Title = "CheckIn";
}

<h2>CheckIn</h2>

@using (Html.BeginForm("CheckIn", "Weight", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)
    <div>        
        <div class="editor-label">
            @Html.LabelFor(model => model.CheckInDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CheckInDate)
            @Html.ValidationMessageFor(model => model.CheckInDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Weight)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Weight)
            @Html.ValidationMessageFor(model => model.Weight)
        </div>

        <div class="actions">
            <input type="submit" value="Create" class="btn primary" /> @Html.ActionLink("Cancel", "WeightCheckIns", null, new { @class="btn secondary" })
        </div>
    </div>
}
@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#CheckInDate").datepicker(
            {
                minDate: new Date("1/17/2012"),
                maxDate: new Date("4/29/2012")
            });

            $("#CheckInDate").attr('readonly', true);
        });
	</script>
}
