@model CraftyLosers.Util.PagedList<CraftyLosers.Models.WeightCheckIn>
@using CraftyLosers.Util;
@{
    ViewBag.Title = "Weight CheckIns";
}

<h2>Weight Check-Ins</h2>

<div class="form-actions">
    @Html.ActionLink("CheckIn", "CheckIn", "Weight", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th>
            CheckIn Date
        </th>
        <th>
            Weight
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.BootstrapPager(Model,10,2)