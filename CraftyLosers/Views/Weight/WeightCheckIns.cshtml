@model IEnumerable<CraftyLosers.Models.WeightCheckIn>

@{
    ViewBag.Title = "Weight CheckIns";
}

<h2>Weight Check-Ins</h2>

<div class="actions form-stacked">
    @Html.ActionLink("CheckIn", "CheckIn", "Weight", null, new { @class = "btn primary" })
</div>

<table>
    <tr>
        <th>
            CheckIn Date
        </th>
        <th>
            Weight
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
