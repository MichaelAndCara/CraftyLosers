@model CraftyLosers.Models.WeightCheckIn

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Weight", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    
    @Html.LabelFor(model => model.CheckInDate)
    @Html.EditorFor(model => model.CheckInDate)
    @Html.ValidationMessageFor(model => model.CheckInDate)
    
    @Html.LabelFor(model => model.Weight)
    @Html.EditorFor(model => model.Weight)
    @Html.ValidationMessageFor(model => model.Weight)
    
    <div class="actions">
        <input type="submit" value="Save" class="btn primary" /> 
        @Html.ActionLink("Back to List", "WeightCheckIns", "Weight", new { @class="btn secondary" })
    </div>
}


@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
