<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css" rel="stylesheet"
		type="text/css" />
	@*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
	<link href="@Url.Content("~/Content/themes/redmond/jquery-ui-1.8.17.custom.css")" rel="stylesheet" type="text/css" />
	<style type="text/css">
		html, body
		{
			background: #eee;
		}
		body
		{
			margin-top: 40px;
		}
		input[type="text"], input[type="number"], select
		{
			margin-bottom: 10px;
		}
		.content
		{
			background-color: #fff;
			padding: 20px;
			margin: 0 -20px;
			min-height: 500px;
			-webkit-border-radius: 0 0 5px 5px;
			-moz-border-radius: 0 0 5px 5px;
			border-radius: 0 0 5px 5px;
			-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
			-moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
			box-shadow: 0 1px 2px rgba(0,0,0,.15);
		}
		.container > footer
		{
			color: #777;
			margin: 0;
			border-top: 0px;
			padding-bottom: 10px;
		}
		.container
		{
			width: 820px; /* downsize our container to make the content feel a bit tighter and more cohesive. NOTE: this removes two full columns from the grid, meaning you only go to 14 columns and not 16. */
		}
		.topbar
		{
			border-bottom: 3px solid #0099FF;
		}
		
		.rpg_topbar
		{
			margin-bottom:20px;
		}
		.rpg_topbar a 
		{
			color: #BFBFBF;
			text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
		}
		/* Styles for validation helpers
-----------------------------------------------------------*/
		.field-validation-error
		{
			color: #ff0000;
		}
		
		.field-validation-valid
		{
			display: none;
		}
		
		.input-validation-error
		{
			border: 1px solid #ff0000;
			background-color: #ffeeee;
		}
		
		.validation-summary-errors li
		{
			font-weight: bold;
			color: #ff0000;
		}
				
		.validation-summary-valid
		{
			display: none;
		}
		
		.display-field
		{
			margin: 0 0 0.5em 0;
		}
		
		/* Styles for Posts
		-----------------------------------------------------------*/
		.postGrid
		{
			border: solid 1px #0099FF;
		}

		.postLeftCol
		{
			width: 700px;
		}
		.postTitle
		{
			font-family: Verdana, Arial;
			font-size: 14px;
			font-weight: bold;
			color: Navy;
		}
		.postDetails
		{
			font-family: Verdana, Arial;
			font-size: 10px;
			color: Gray;
		}

		.postWrapper
		{
			padding: 5px;
			list-style-position:inside;
		}
		.postContent
		{
			padding: 5px;
			background-color: whiteSmoke;
		}
	</style>
	
	@*<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>*@
</head>
<body>
	<div class="topbar">
		<div class="topbar-inner">
			<div class="container">
				@Html.ActionLink("Crafty Losers", "Index", "Home", null, new { @class = "brand" })
				<ul class="nav">
					<li>@Html.ActionLink("Account", "Account", "Account")</li>
					<li class="dropdown" data-dropdown="dropdown"><a href="#" class="dropdown-toggle">Weight</a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Weight CheckIns", "WeightCheckIns", "Weight")</li>
							<li>@Html.ActionLink("Stats", "Stats", "Weight")</li>   
						</ul>
					</li>
					<li>@Html.ActionLink("Posts", "Posts", "Post")</li>
					<li>@Html.ActionLink("CL-RPG","About", "RPG")</li>
					@*<li class="dropdown" data-dropdown="dropdown"><a href="#" class="dropdown-toggle">CL-RPG</a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Index","Index", "RPG")</li>
							<li>@Html.ActionLink("About","About", "RPG")</li>
							<li>@Html.ActionLink("Profile","Profile", "RPG")</li>
							<li>@Html.ActionLink("About","About", "RPG")</li>
						</ul>
					</li>   *@                 
				</ul>
				<ul class="nav secondary-nav">
					<li><strong>@(HttpContext.Current.User.Identity.IsAuthenticated ? Html.ActionLink("Logout " + HttpContext.Current.User.Identity.Name, "LogOff", "Account") : Html.ActionLink("Login", "LogOn", "Account"))</strong></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="content">
			@RenderBody()
		</div>
		<footer>
	</footer>
	</div>
	<script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.min.js" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.custom.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
	@RenderSection("javascript", required: false)
</body>
</html>
