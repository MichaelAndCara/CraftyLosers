@model CraftyLosers.Models.Comment
@{
    ViewBag.Title = "Comment";
}
<h2>
    Comment</h2>
@Html.LabelFor(model => model.Post.PostContent)
@Html.TextAreaFor(model => model.Post.PostContent, new { @class = "span7", @rows = Model.Post.LineCount, @readonly = "readonly" })
@using (Html.BeginForm("Comment", "Post", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.UserId)
    
    @Html.LabelFor(model => model.CommentContent)
    @Html.TextAreaFor(model => model.CommentContent, new { @class = "span7", @rows = 5 })
    @Html.ValidationMessageFor(model => model.CommentContent)
    
    <div class="form-actions">
        <input type="submit" value="Create" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Posts", "Post", null, new { @class = "btn" })
    </div>
}
@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
