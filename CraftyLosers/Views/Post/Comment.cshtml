@model CraftyLosers.Models.Comment

@{
    ViewBag.Title = "Comment";
}

<h2>Comment</h2>

@using (Html.BeginForm("Comment", "Post", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.UserId)
    
    @Html.LabelFor(model => model.Post.PostContent)
    @Html.DisplayFor(model => model.Post.PostContent)
    
    @Html.LabelFor(model => model.CommentContent)
    @Html.TextAreaFor(model => model.CommentContent)
    @Html.ValidationMessageFor(model => model.CommentContent)
    
    <div class="actions">
        <input type="submit" value="Create" class="btn primary" />
        @Html.ActionLink("Cancel", "Posts", "Post", null, new { @class = "btn secondary" })
    </div>
}

@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
