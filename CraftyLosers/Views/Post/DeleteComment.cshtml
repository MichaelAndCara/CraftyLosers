@model CraftyLosers.Models.Comment
@{
    ViewBag.Title = "Delete Comment";
}
<h2>
    Delete Comment</h2>
<h3>
    Are you sure you want to delete this?</h3>
@using (Html.BeginForm("DeleteComment", "Post", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    
    @Html.LabelFor(model => model.CommentContent)
    @Html.TextAreaFor(model => model.CommentContent, new { @class = "span7", @rows = Model.LineCount, @readonly = "readonly" })
    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Posts", "Post", null, new { @class = "btn" })
    </div>
}
