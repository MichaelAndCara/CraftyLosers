@model CraftyLosers.Models.Post

@{
    ViewBag.Title = "Delete Post";
}

<h2>Delete Post</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="form-stacked">
    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">Post</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PostContent)
    </div>
</div>
@using (Html.BeginForm("DeletePost", "Post", FormMethod.Post, new { @class = "form-stacked" }))
{
    <div>
        <input type="submit" value="Delete" class="btn primary" /> 
        @Html.ActionLink("Cancel", "Posts", "Post", null, new { @class = "btn secondary" })
    </div>
}
