@model CraftyLosers.ViewModels.ForgotUserNameOrPassword

@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)
    
    @Html.LabelFor(model => model.Email)
    @Html.EditorFor(model => model.Email)
    @Html.ValidationMessageFor(model => model.Email)
    
    <div class="actions">
        <input type="submit" value="Reset" class="btn primary" /> 
        @Html.ActionLink("Forgot Username?", "ForgotUsername", "Account", null, new { @class="btn secondary" })
    </div>
}
@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
