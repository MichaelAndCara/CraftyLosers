@model CraftyLosers.ViewModels.LogOn

@{
    ViewBag.Title = "Log On";
}

<h2>Log On</h2>
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class="form-stacked" }))
{
    @Html.ValidationSummary(true)
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.User.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.User.UserName)
            @Html.ValidationMessageFor(model => model.User.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.User.PW)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.User.PW)
            @Html.ValidationMessageFor(model => model.User.PW)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RememberMe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RememberMe)
            @Html.ValidationMessageFor(model => model.RememberMe)
        </div>
        <div class="actions">
            <input type="submit" value="Log On" class="btn primary" /> @Html.ActionLink("Cancel", "Index", "Home", null, new { @class="btn secondary" })
        </div>
    </div>
}

@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
