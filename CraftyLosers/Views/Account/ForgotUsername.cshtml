@model CraftyLosers.ViewModels.ForgotUserNameOrPassword

@{
    ViewBag.Title = "Forgot Username";
}

<h2>Forgot Username</h2>

@using (Html.BeginForm("ForgotUsername", "Account", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        
        <div class="actions">
            <input type="submit" value="Request" class="btn primary" />
        </div>
    </div>
}

@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
