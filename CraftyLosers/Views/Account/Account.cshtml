@model CraftyLosers.Models.User
@{
    ViewBag.Title = "Account";
}
<h2>
    Account</h2>
@using (Html.BeginForm("Account", "Account", FormMethod.Post, new { @class = "form-stacked" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.StartWeight)
    @Html.HiddenFor(model => model.EndWeight)
    @Html.HiddenFor(model => model.Active)
    @Html.HiddenFor(model => model.PW)
    @Html.HiddenFor(model => model.SignUpDateTime)
    @Html.HiddenFor(model => model.Admin)
    @Html.HiddenFor(model => model.Paid)
    
    @Html.LabelFor(model => model.Id)
    @Html.DisplayFor(model => model.Id)
    
    @Html.LabelFor(model => model.UserName)
    @Html.DisplayFor(model => model.UserName)
    
    @Html.LabelFor(model => model.StartWeight)
    @Html.DisplayFor(model => model.StartWeight)
    
    @Html.LabelFor(model => model.EndWeight)
    @Html.DisplayFor(model => model.EndWeight)
    
    <hr />
    
    @Html.LabelFor(model => model.Email)
    @Html.EditorFor(model => model.Email)
    @Html.ValidationMessageFor(model => model.Email)
    
    @Html.LabelFor(model => model.GoalWeight)
    @Html.EditorFor(model => model.GoalWeight)
    @Html.ValidationMessageFor(model => model.GoalWeight)
    
    @Html.LabelFor(model => model.DisplayName)
    @Html.EditorFor(model => model.DisplayName) <span class="label notice">(Uncheck if you want to be more anonymous.)</span>
    @Html.ValidationMessageFor(model => model.DisplayName)            
    
    <div class="actions">
        <input type="submit" value="Save" class="btn primary" />
        @Html.ActionLink("Change Password", "ChangePassword", "Account", null, new { @class = "btn secondary" })
        @if (Model.Admin)
        {
            @Html.ActionLink("Admin Weights", "AdminWeights", "Account", null, new { @class = "btn secondary" })
        }
    </div>
}

@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
