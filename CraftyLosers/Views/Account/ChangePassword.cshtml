@model CraftyLosers.ViewModels.ChangePassword

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    
    @Html.HiddenFor(model => model.Id)

    @Html.LabelFor(model => model.PW)
    @Html.EditorFor(model => model.PW)
    @Html.ValidationMessageFor(model => model.PW)
    
    @Html.LabelFor(model => model.NewPW)
    @Html.EditorFor(model => model.NewPW)
    @Html.ValidationMessageFor(model => model.NewPW)
    
    @Html.LabelFor(model => model.ConfirmNewPW)
    @Html.EditorFor(model => model.ConfirmNewPW)
    @Html.ValidationMessageFor(model => model.ConfirmNewPW)
    
    <div class="form-actions">
        <input type="submit" value="Save" class="btn btn-primary" /> 
        <span class="btn">
        @Html.ActionLink("Cancel", "Index", "Home")
        </span>
    </div>
}

@section javascript
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
